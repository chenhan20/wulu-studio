extends ../common/layout

block body
  link(href="/stylesheets/index.css", rel="stylesheet")
  .container-fluid.video_container
  video(loop='', muted='',autoplay='')
    source(src='https://lolstatic-a.akamaihd.net/frontpage/apps/prod/playnow-global/en_GB/38d98194ca4c5b6d4c1933edd74eec2ee3b53438/assets/vid/hero-video.mp4', type='video/mp4')
  .overlay-desc
    h1 🔥🔥🔥五路皆神工作室概念網站🔥🔥🔥
        |steve_branch 20171008
  .container
    .row
      #app
       | {{ message }}
    form
      .row
        .form-group.col-sm-2
          label(for='sel1') 目前牌位:
          select#sel1.form-control
            option 銅牌Bronze
            option 銀牌Silver
            option 金牌Gold
            option 白金Platinum
            option 鑽石Diamond
            option 大師Master
            option 菁英Challenger
        .form-group.col-sm-2
          label(for='sel2') 目前區間:
          select#sel2.form-control
            option 五區(V)
            option 四區(IV)
            option 三區(III)
            option 二區(II)
            option 一區(I)
        .form-group.col-sm-2
          label(for='sel3') 目前分數:
          input.form-control.old_input_point(type='text')
        .col-sm-3
          button.btn.btn-primary.form-control.btn_search(type='button') 五路價目表
      .row
        .form-group.col-sm-2
          label(for='sel4') 目標牌位:
          select#sel3.form-control
            option 銅牌Bronze
            option 銀牌Silver
            option 金牌Gold
            option 白金Platinum
            option 鑽石Diamond
            option 大師Master
            option 菁英Challenger
        .form-group.col-sm-2
          label(for='sel5') 目標區間:
          select#sel4.form-control
            option 五區(V)
            option 四區(IV)
            option 三區(III)
            option 二區(II)
            option 一區(I)
        .form-group.col-sm-2
          label(for='sel6') 目標分數:
          input.form-control.new_input_point(type='text')
        .col-sm-3
          button.btn.btn-primary.form-control.btn_search(type='button') 查詢價格
      .row
        .show_01
          h3.title_01
          h3.text_01


  script(src="/vue/dist/vue.js")
  script(src="../js/index.js")
  script(src="/fullpage.js/jquery.fullPage.js")
  link(href="/stylesheets/index.css", rel="stylesheet")





