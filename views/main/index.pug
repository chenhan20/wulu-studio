extends ../common/layout

block append body
  block nav_bar
  block append right_li
  block carousel
  link(href="/stylesheets/index.css", rel="stylesheet")
  .container-fluid
    section#main.blue.full-height
      .video_container
        video(loop='', muted='',autoplay='')
          source(src='https://lolstatic-a.akamaihd.net/frontpage/apps/prod/playnow-global/en_GB/38d98194ca4c5b6d4c1933edd74eec2ee3b53438/assets/vid/hero-video.mp4', type='video/mp4')
        .overlay-desc.d-none.d-md-inline-block
          h1.mediafont 🔥五路皆神工作室概念網站🔥 
              |SteveChuang
        .overlay-button
          .g2d-hero-action-btn 你的牌位 由你定義
    section#secondary.red.full-height
      .d-flex#price
        .p-2
          form.form-inline
            select.form-control.custom-select(v-model='original_league')
              option(value='銅牌') 銅牌
              option(value='銀牌') 銀牌
              option(value='金牌') 金牌
              option(value='白金') 白金
              option(value='鑽石') 鑽石
              option(value='大師') 大師
              option(value='菁英') 菁英
            select.form-control.custom-select(v-model='original_area',v-if="original_league!=='大師'&&original_league!=='菁英'")
              option(value='一(I)') 一(I)
              option(value='二(II)') 二(II)
              option(value='三(III)') 三(III)
              option(value='四(IV)') 四(IV)
              option(value='五(V)') 五(V)
            input.col-md-2.col-xs-1.form-control.OG_input(v-model='original_point',placeholder='')
          form.form-inline
            select.form-control.custom-select(v-model='target_league')
              option(value='銅牌') 銅牌
              option(value='銀牌') 銀牌
              option(value='金牌') 金牌
              option(value='白金') 白金
              option(value='鑽石') 鑽石
              option(value='大師') 大師
              option(value='菁英') 菁英
            select.form-control.custom-select(v-model='target_area',v-if="target_league!=='大師'&&target_league!=='菁英'")
              option(value='一(I)') 一(I)
              option(value='二(II)') 二(II)
              option(value='三(III)') 三(III)
              option(value='四(IV)') 四(IV)
              option(value='五(V)') 五(V)
            input.col-md-2.form-control.TG_input(v-model='target_point',placeholder='')
          .p-2
            small.font 20分為一勝差，若小於則以一勝差計算
          .p-2
            h4.span.span_1.font 從  {{original_league}}
              span.span_1.font(v-if="original_league!=='大師'&&original_league!=='菁英'") {{original_area}}  區
              span.span_1.font(v-if='original_point<=100&&original_point>=0&&target_point<=100&&target_point>=0') {{original_point}} 分
            h4.span.span_1.font 打到 {{target_league}} 
              span.span_1.font(v-if="target_league!=='大師'&&target_league!=='菁英'") {{target_area}} 區
              span.span_1.font(v-if='original_point<=100&&original_point>=0&&target_point<=100&&target_point>=0') {{target_point}} 分
          h1.font_arrow 
          .p2(v-if="Fn_point()==='pointFail'")
            h3.sapn.span_2.font_price 分數輸入有誤!
          .p2(v-if="Fn_point()==='pointSame'")
            h3.sapn.span_2.font_price 牌位分數相同!
          .p2(v-if="Fn_point()==='leagueORareaFail'")
            h3.sapn.span_2.font_price 區域選擇有誤!
          .p2(v-else-if="Fn_point()==='success'")
              h4.sapn.span_2.font_price 價格為:{{TotalPrice()}}元
        .p-2
          .flex-row
            .original_image.col-md-2.col.d-none.d-md-inline-block
              span.span_image(v-if='original_changImage()==1')
                img(src='/image/Bronze.jpg')
              span.span_image(v-if='original_changImage()==2')
                img(src='/image/Silver.jpg')
              span.span_image(v-if='original_changImage()==3')
                img(src='/image/Gold.jpg')
              span.span_image(v-if='original_changImage()==4')
                img(src='/image/Platinum.jpg')
              span.span_image(v-if='original_changImage()==5')
                img(src='/image/Diamond.jpg')
              span.span_image(v-if='original_changImage()==6')
                img(src='/image/Master.jpg')
              span.span_image(v-if='original_changImage()==7')
                img(src='/image/Challenger.jpg')
              h3.font.image_text {{original_area}}
                span.span_1.font(v-if='original_point<=100&&original_point>=0&&target_point<=100&&target_point>=0') {{original_point}} 分
              span.span_image(v-if='target_changImage()==1')
                img(src='/image/Bronze.jpg')
              span.span_image(v-if='target_changImage()==2')
                img(src='/image/Silver.jpg')
              span.span_image(v-if='target_changImage()==3')
                img(src='/image/Gold.jpg')
              span.span_image(v-if='target_changImage()==4')
                img(src='/image/Platinum.jpg')
              span.span_image(v-if='target_changImage()==5')
                img(src='/image/Diamond.jpg')
              span.span_image(v-if='target_changImage()==6')
                img(src='/image/Master.jpg')
              span.span_image(v-if='target_changImage()==7')
                img(src='/image/Challenger.jpg')
              h3.font.image_text {{target_area}}
                span.span_1.font(v-if='original_point<=100&&original_point>=0&&target_point<=100&&target_point>=0') {{target_point}} 分
    section#third.green.full-height
    section#fourth.pink.full-height
    section#fifth.black.full-height

    

          

  
    


  script(src="/vue/dist/vue.js")
  script(src="../js/index.js")
  script(src="../js/index_click.js")
  script(src="/js/right_li.js")

  


  

